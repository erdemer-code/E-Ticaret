<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/button_box_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/product_item_img_padding"
    android:layout_marginEnd="@dimen/product_item_img_padding"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/size_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_two_price"
        android:paddingStart="@dimen/btn_box_padding"
        android:paddingEnd="@dimen/btn_box_padding"
        android:textAlignment="center"
        android:textSize="@dimen/category_text_size"
        android:textStyle="bold"
        android:enabled="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/temp_size_l" />

</androidx.constraintlayout.widget.ConstraintLayout>